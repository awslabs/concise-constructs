{
  "$schema": "https://json.schemastore.org/package",
  "name": "concise-constructs",
  "version": "0.0.2-next.2",
  "license": "Apache-2.0",
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "sideEffects": false,
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "cjs"
  ],
  "description": "A functional-feeling DX for the AWS CDK and other construct libraries",
  "repository": "github:awslabs/concise-constructs",
  "keywords": [
    "concise",
    "constructs",
    "aws",
    "cdk",
    "cdk8s",
    "terraform",
    "cloud",
    "development",
    "kit"
  ],
  "dependencies": {
    "@aws-cdk/core": "^1.86.0",
    "constructs": "^3.2.116"
  },
  "devDependencies": {
    "@aws-cdk/aws-apigateway": "^1.86.0",
    "@aws-cdk/aws-appsync": "^1.86.0",
    "@aws-cdk/aws-lambda": "^1.86.0",
    "@aws-cdk/aws-s3": "^1.86.0",
    "@graphql-codegen/cli": "^1.20.1",
    "@graphql-codegen/typescript": "^1.20.2",
    "@types/aws-lambda": "^8.10.71",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "aws-cdk": "^1.86.0",
    "aws-sdk": "^2.831.0",
    "conditional-type-checks": "^1.0.5",
    "esbuild": "^0.8.36",
    "graphql": "^15.5.0",
    "husky": "^4.3.8",
    "javascript-stringify": "^2.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "cache": false,
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "tsconfig": "tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts",
      "**/tests/**/*"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "verbose": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run test --bail && npm run build"
    }
  },
  "scripts": {
    "clean": "rm -rf cjs examples/*/{cdk.out,outputs.json,lambda/{dist,generated-types.ts}} node_modules",
    "format": "prettier --write . --ignore=node_modules --loglevel=error",
    "test": "jest",
    "build": "tsc -P tsconfig.build.json",
    "watch": "tsc -P tsconfig.build.json --watch",
    "release": "standard-version",
    "release-next": "npm run release -- --prerelease next",
    "example": "ts-node examples"
  }
}
